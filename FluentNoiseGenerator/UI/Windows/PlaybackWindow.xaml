<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="FluentNoiseGenerator.UI.Windows.PlaybackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:FluentNoiseGenerator.UI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="{x:Bind ViewModel.StringResources.Title.Value}"
        x:DefaultBindMode="OneWay"
        mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <Grid x:Name="layoutRoot"
          IsTabStop="True"
          LayoutUpdated="layoutRoot_LayoutUpdated">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:PlaybackTopBar x:Name="playbackTopBar"
                                 Grid.Row="0"
                                 Padding="4"
                                 BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                                 BorderThickness="0,0,0,1"
                                 CloseButtonClickCommand="{x:Bind ViewModel.CloseWindowCommand}"
                                 SettingsButtonClickCommand="{x:Bind ViewModel.ShowSettingsCommand}"/>

        <controls:PlaybackControlPanel Grid.Row="1"
                                       IsPlaying="{x:Bind ViewModel.IsPlaying}"
                                       NoisePresetItemsSource="{x:Bind ViewModel.NoisePresets}"
                                       PlaybackButtonClickCommand="{x:Bind ViewModel.TogglePlaybackCommand}"
                                       Volume="{x:Bind ViewModel.CurrentVolume}"/>
    </Grid>
</Window>
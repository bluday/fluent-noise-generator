<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="FluentNoiseGenerator.UI.Windows.PlaybackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:FluentNoiseGenerator.UI.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:DefaultBindMode="OneWay"
        mc:Ignorable="d">
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <Grid x:Name="layoutRoot"
          IsTabStop="True"
          LayoutUpdated="layoutRoot_LayoutUpdated">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:TopActionBar x:Name="topActionBar"
                               Grid.Row="0"
                               Padding="4"
                               BorderBrush="{ThemeResource ControlElevationBorderBrush}"
                               BorderThickness="0,0,0,1"
                               CloseButtonClicked="topActionBar_CloseButtonClicked"
                               SettingsButtonClicked="topActionBar_SettingsButtonClicked"/>

        <controls:PlaybackControlPanel x:Name="playbackControlPanel"
                                       Grid.Row="1"
                                       PlaybackButtonClicked="playbackControlPanel_PlaybackButtonClicked"/>
    </Grid>
</Window>
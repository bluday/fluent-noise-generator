<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="FluentNoiseGenerator.UI.Settings.Controls.SettingsAppearanceSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:communityToolkit="using:CommunityToolkit.WinUI"
             xmlns:communityToolkitControls="using:CommunityToolkit.WinUI.Controls"
             xmlns:controls="using:FluentNoiseGenerator.UI.Settings.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:SettingsSectionHeader Grid.Row="0"
                                        Glyph="&#xead5;"
                                        Text="{x:Bind Header}"/>

        <StackPanel Grid.Row="1"
                    Spacing="2">
            <communityToolkitControls:SettingsCard Description="{x:Bind AlwaysOnTopSettingsCardDescription}"
                                                   Header="{x:Bind AlwaysOnTopSettingsCardHeader}"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xe81e;}">
                <ToggleSwitch/>
            </communityToolkitControls:SettingsCard>

            <communityToolkitControls:SettingsCard Description="{x:Bind ApplicationThemeSettingsCardDescription}"
                                                   Header="{x:Bind ApplicationThemeSettingsCardHeader}"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xe790;}">
                <ComboBox DisplayMemberPath="Resource.Value"
                          ItemsSource="{x:Bind AvailableApplicationThemes}"
                          SelectedItem="{x:Bind SelectedApplicationTheme, Mode=TwoWay}"
                          SelectedValuePath="Value"/>
            </communityToolkitControls:SettingsCard>

            <communityToolkitControls:SettingsCard Description="{x:Bind SystemBackdropSettingsCardDescription}"
                                                   Header="{x:Bind SystemBackdropSettingsCardHeader}"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xeb42;}">
                <ComboBox DisplayMemberPath="Resource.Value"
                          ItemsSource="{x:Bind AvailableSystemBackdrops}"
                          SelectedItem="{x:Bind SelectedSystemBackdrop, Mode=TwoWay}"
                          SelectedValuePath="Value"/>
            </communityToolkitControls:SettingsCard>
        </StackPanel>
    </Grid>
</UserControl>
<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="FluentNoiseGenerator.UI.Controls.SettingsGeneralSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:communityToolkit="using:CommunityToolkit.WinUI"
             xmlns:communityToolkitControls="using:CommunityToolkit.WinUI.Controls"
             xmlns:controls="using:FluentNoiseGenerator.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:SettingsSectionHeader Grid.Row="0"
                                        Glyph="&#xf8a6;"
                                        Text="{x:Bind Header}"/>

        <StackPanel Grid.Row="1"
                    Spacing="2">
            <communityToolkitControls:SettingsCard Description="{x:Bind AutoplayOnLaunchSettingsCardDescription}"
                                                   Header="{x:Bind AutoplayOnLaunchSettingsCardHeader}"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xec57;}">
                <ToggleSwitch/>
            </communityToolkitControls:SettingsCard>

            <communityToolkitControls:SettingsCard Description="{x:Bind DefaultNoisePresetSettingsCardDescription}"
                                                   Header="{x:Bind DefaultNoisePresetSettingsCardHeader}"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xe9e9;}">
                <ComboBox ItemsSource="{x:Bind AvailableNoisePresets}"
                          SelectedItem="{x:Bind SelectedDefaultNoisePreset, Mode=TwoWay}"/>
            </communityToolkitControls:SettingsCard>

            <communityToolkitControls:SettingsCard Description="{x:Bind LanguageSettingsCardDescription}"
                                                   Header="{x:Bind LanguageSettingsCardHeader}"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xf2b7;}">
                <ComboBox ItemsSource="{x:Bind AvailableLanguages}"
                          SelectedItem="{x:Bind SelectedLanguage, Mode=TwoWay}"/>
            </communityToolkitControls:SettingsCard>
        </StackPanel>
    </Grid>
</UserControl>
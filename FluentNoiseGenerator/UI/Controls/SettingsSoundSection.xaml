<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="FluentNoiseGenerator.UI.Controls.SettingsSoundSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:communityToolkit="using:CommunityToolkit.WinUI"
             xmlns:communityToolkitControls="using:CommunityToolkit.WinUI.Controls"
             xmlns:controls="using:FluentNoiseGenerator.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:SettingsSectionHeader Grid.Row="0"
                                        Glyph="&#xe8d6;"
                                        Text="{x:Bind Header}"/>

        <StackPanel Grid.Row="1"
                    Spacing="2">
            <communityToolkitControls:SettingsCard Description="{x:Bind AudioSampleRateSettingsCardDescription}"
                                                   Header="{x:Bind AudioSampleRateSettingsCardHeader}"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xf61f;}">
                <ComboBox ItemsSource="{x:Bind AvailableAudioSampleRates}"
                          SelectedItem="{x:Bind SelectedAudioSampleRate, Mode=TwoWay}"
                          SelectedValuePath="Value"/>
            </communityToolkitControls:SettingsCard>
        </StackPanel>
    </Grid>
</UserControl>
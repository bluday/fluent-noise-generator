<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:Class="FluentNoiseGenerator.UI.Settings.Controls.SettingsAppearanceSection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:communityToolkit="using:CommunityToolkit.WinUI"
             xmlns:communityToolkitControls="using:CommunityToolkit.WinUI.Controls"
             xmlns:controls="using:FluentNoiseGenerator.UI.Settings.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:DefaultBindMode="OneWay"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <controls:SettingsSectionHeader x:Uid="SettingsWindow/SectionHeaders/Appearance"
                                        Grid.Row="0"
                                        Glyph="&#xead5;"/>

        <StackPanel Grid.Row="1"
                    Spacing="2">
            <communityToolkitControls:SettingsCard x:Uid="SettingsWindow/SettingsCards/Appearance/AlwaysOnTop"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xe81e;}">
                <ToggleSwitch/>
            </communityToolkitControls:SettingsCard>

            <communityToolkitControls:SettingsCard x:Uid="SettingsWindow/SettingsCards/Appearance/ApplicationTheme"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xe790;}">
                <ComboBox ItemsSource="{x:Bind AvailableApplicationThemes}"
                          SelectedItem="{x:Bind SelectedApplicationTheme, Mode=TwoWay}"/>
            </communityToolkitControls:SettingsCard>

            <communityToolkitControls:SettingsCard x:Uid="SettingsWindow/SettingsCards/Appearance/SystemBackdrop"
                                                   HeaderIcon="{communityToolkit:FontIcon Glyph=&#xeb42;}">
                <ComboBox ItemsSource="{x:Bind AvailableSystemBackdrops}"
                          SelectedItem="{x:Bind SelectedSystemBackdrop, Mode=TwoWay}"/>
            </communityToolkitControls:SettingsCard>
        </StackPanel>
    </Grid>
</UserControl>
<?xml version="1.0" encoding="utf-8" ?>
<UserControl mc:Ignorable="d"
             x:Class="FluentNoiseRemover.Controls.PlaybackControlPanel"
             x:DefaultBindMode="OneWay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:communityToolkit="using:CommunityToolkit.WinUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Width" Value="32"/>
        </Style>
    </UserControl.Resources>

    <StackPanel HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="8"
                VerticalAlignment="Center">
        <Button>
            <Button.Flyout>
                <Flyout AreOpenCloseAnimationsEnabled="True" ShouldConstrainToRootBounds="False">
                    <Grid Width="200">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,8" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock FontSize="16"
                                       Style="{StaticResource BodyStrongTextBlockStyle}"
                                       Text="Noise presets"/>

                            <Button Background="Transparent"
                                    BorderBrush="Transparent"
                                    Content="{communityToolkit:FontIcon FontSize=12,
                                                                        Glyph=&#xe710;}"
                                    Height="24"
                                    Padding="4"
                                    Width="24"
                                    Grid.Column="1"
                                    ToolTipService.ToolTip="Create preset"/>
                        </Grid>

                        <ListView Grid.ColumnSpan="2" Grid.Row="1">
                            <ListViewItem>
                                <Grid Margin="4,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Border Background="White"
                                            CornerRadius="{StaticResource ControlCornerRadius}"
                                            Height="24"
                                            HorizontalAlignment="Left"
                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            Width="24"
                                            Grid.Column="0"/>

                                    <TextBlock Text="White"
                                               VerticalAlignment="Center"
                                               Grid.Column="1"/>
                                </Grid>
                            </ListViewItem>
                        </ListView>
                    </Grid>
                </Flyout>
            </Button.Flyout>

            <Viewbox>
                <FontIcon Glyph="&#xf61f;"/>
            </Viewbox>
        </Button>

        <Button x:Name="PlaybackButton"
                Click="PlaybackButton_Click"
                CornerRadius="40"
                Height="48"
                Width="48"
                Style="{StaticResource DefaultButtonStyle}">
            <Viewbox>
                <FontIcon x:Name="PlaybackButtonFontIcon" Glyph="&#xf5b0;"/>
            </Viewbox>
        </Button>

        <Button>
            <Button.Flyout>
                <Flyout AreOpenCloseAnimationsEnabled="True" ShouldConstrainToRootBounds="False">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Slider Value="50" Width="150"/>

                        <TextBlock Text="50%"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"/>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>

            <Viewbox>
                <FontIcon Glyph="&#xe767;"/>
            </Viewbox>
        </Button>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="CommonStates">
                <VisualState x:Name="Normal"/>

                <VisualState x:Name="Playing">
                    <VisualState.Setters>
                        <Setter Target="PlaybackButtonFontIcon.Glyph" Value="&#xf8ae;"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </StackPanel>
</UserControl>